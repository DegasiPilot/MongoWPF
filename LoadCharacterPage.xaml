<Page x:Class="MongoWPF.LoadCharacterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MongoWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadCharacterPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label>Имя персонажа</Label>
                <TextBox Width="100" x:Name="CharacterNameTb"></TextBox>
            </StackPanel>
            <Button Margin="5 10 5 0" x:Name="LoadBtn" Click="LoadBtn_Click">Загрузить</Button>
            <Button Margin="5 30 5 0" x:Name="BackBtn" Click="BackBtn_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
